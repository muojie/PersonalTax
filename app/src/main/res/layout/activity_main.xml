<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity">

    <TextView android:text="@string/str_hello"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/text_hello"
        android:layout_centerHorizontal="true"
        android:textColor="@color/abc_search_url_text"
        android:textStyle="bold"
        android:textSize="@dimen/abc_text_size_large_material"
        android:gravity="center" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/text_hello"
        android:text="@string/str_income_type"
        android:id="@+id/text_income_type"
        android:textSize="20dp"
        android:textStyle="normal" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/str_income_amount"
        android:id="@+id/text_amount"
        android:textSize="20dp"
        android:textStyle="normal"
        android:layout_below="@+id/text_income_type" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/editTextAmount"
        android:layout_below="@+id/text_amount"
        android:text="请输入金额"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/str_cardinality"
        android:id="@+id/textViewCardinality"
        android:textSize="20dp"
        android:textStyle="normal"
        android:layout_below="@+id/editTextAmount" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/editTextCardinality"
        android:layout_below="@+id/textViewCardinality"
        android:text="请输入五险一金基数"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:id="@+id/button_submit"
        android:text="计算"
        android:layout_below="@+id/editTextCardinality"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true" />

</RelativeLayout>
